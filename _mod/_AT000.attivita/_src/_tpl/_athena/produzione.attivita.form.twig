{# IMPORTAZIONE LIBRERIE #}
{% import '_lib/_default.twig' as cms %}
{% import '_lib/_form.twig' as frm %}
{% import 'lib/default.twig' as def %}

{# ESTENSIONE DELLO SCHEMA DI BASE #}
{% extends 'ext/main.twig' %}

{# BLOCCO PRINCIPALE DELLA PAGINA #}
{% block main %}
<!-- blocco {{ _self }}::main -->

{# MODULO PRINCIPALE #}
<section class="row flex-fill">
    <div class="col-md-12 d-flex flex-column">

        {# APERTURA DEL FORM #}
        {{ frm.openForm({ 'form': form, 'page': page, 'session': session, 'request': request }) }}

			{# SEZIONE GENERALE #}
			<fieldset>
				<legend>dati generali <small>{{ legend }}</small></legend>

				{# PRIMA RIGA DI CAMPI #}
                <div class="form-group row">
                    <div class="col-12 col-md-auto form-col">
						<span class="label-top">tipologia</span>
						{{ frm.select({ 'field': { 'name': 'id_tipologia' }, 'source': { 'values': etc.select.tipologie_attivita }, 'request': request, 'form': form, 'page': page, 'pages': pages }) }}
					</div>
                    <div class="col form-col">
                        <span class="label-top">codice</span>
                        {{ frm.input({ 'field': { 'name': 'codice', 'type': 'text' }, 'request': request, 'form': form, 'page': page }) }}
                    </div>
                    <div class="col form-col">
                        <span class="label-top">nome</span>
                        {{ frm.input({ 'field': { 'name': 'nome', 'type': 'text' }, 'request': request, 'form': form, 'page': page }) }}
                    </div>
                </div>

            </fieldset>

			{# SEZIONE PROGRAMMAZIONE #}
			<fieldset>
				<legend>programmazione</legend>

				{# PRIMA RIGA DI CAMPI #}
                <div class="form-group row">

                    <div class="col col-md-auto form-col">
                        <span class="label-top">data</span>
                        {{ frm.input({ 'field': { 'name': 'data_programmazione', 'type': 'date' }, 'request': request, 'form': form, 'page': page }) }}
                    </div>
                    <div class="col col-md-auto form-col">
                        <span class="label-top">inizio</span>
                        {{ frm.input({ 'field': { 'name': 'ora_inizio_programmazione', 'type': 'time' }, 'request': request, 'form': form, 'page': page }) }}
                    </div>
                    <div class="col col-md-auto form-col">
                        <span class="label-top">fine</span>
                        {{ frm.input({ 'field': { 'name': 'ora_fine_programmazione', 'type': 'time' }, 'request': request, 'form': form, 'page': page }) }}
                    </div>
                    <div class="col col-md-1 form-col">
                        <span class="label-top">ore previste</span>
                        {{ frm.input({ 'field': { 'name': 'ore_programmazione', 'type': 'number' }, 'request': request, 'form': form, 'page': page }) }}
                    </div>
                    <div class="col col-md form-col">
                        <span class="label-top">incaricato</span>
                        {{ frm.select({ 'field': { 'name': 'id_anagrafica_programmazione', 'disabled': disabled }, 'source': { 'api': 'anagrafica' }, 'request': request, 'form': form, 'page': page, 'pages': pages }) }}
                    </div>

                </div>

				{# SECONDA RIGA DI CAMPI #}
				<div class="form-group row">
					<div class="col-12 form-col">
						<span class="label-top">note</span>
                        {{ frm.textarea({ 'field': { 'name': 'note_programmazione', 'rows': 2 }, 'request': request, 'form': form, 'page': page }) }}
					</div>
				</div>

            </fieldset>

			{# SEZIONE ESECUZIONE #}
			<fieldset>
				<legend>esecuzione</legend>

				{# PRIMA RIGA DI CAMPI #}
                <div class="form-group row">

                    <div class="col col-md-auto form-col">
                        <span class="label-top">data</span>
                        {{ frm.input({ 'field': { 'name': 'data_attivita', 'type': 'date' }, 'request': request, 'form': form, 'page': page }) }}
                    </div>
                    <div class="col col-md-auto form-col">
                        <span class="label-top">inizio</span>
                        {{ frm.input({ 'field': { 'name': 'ora_inizio', 'type': 'time' }, 'request': request, 'form': form, 'page': page }) }}
                    </div>
                    <div class="col col-md-auto form-col">
                        <span class="label-top">fine</span>
                        {{ frm.input({ 'field': { 'name': 'ora_fine', 'type': 'time' }, 'request': request, 'form': form, 'page': page }) }}
                    </div>
                    <div class="col col-md-1 form-col">
                        <span class="label-top">ore</span>
                        {{ frm.input({ 'field': { 'name': 'ore', 'type': 'number' }, 'request': request, 'form': form, 'page': page }) }}
                    </div>
                    <div class="col col-md form-col">
                        <span class="label-top">esecutore</span>
                        {{ frm.select({ 'field': { 'name': 'id_anagrafica', 'disabled': disabled }, 'source': { 'api': 'anagrafica' }, 'request': request, 'form': form, 'page': page, 'pages': pages }) }}
                    </div>

                </div>

				{# SECONDA RIGA DI CAMPI #}
				<div class="form-group row">
					<div class="col-12 form-col">
						<span class="label-top">note</span>
                        {{ frm.textarea({ 'field': { 'name': 'note', 'rows': 2 }, 'request': request, 'form': form, 'page': page }) }}
					</div>
				</div>

            </fieldset>

			{# SEZIONE ATTRIBUZIONE #}
			<fieldset>
				<legend>attribuzione</legend>

				{# PRIMA RIGA DI CAMPI #}
                <div class="form-group row">

                    <div class="col col-md form-col">
                        <span class="label-top">cliente</span>
                        {{ frm.select({ 'field': { 'name': 'id_cliente' }, 'source': { 'api': 'anagrafica' }, 'request': request, 'form': form, 'page': page, 'pages': pages }) }}
                    </div>

                </div>

            </fieldset>

			{# BOTTONI E COMANDI DEL MODULO #}
			<fieldset class="form-controls mt-auto">
				{{ def.controls( page, pages, ietf, session, form.table, request ) }}
			</fieldset>

		</form>
    </div>
</section>

<!-- fine blocco {{ _self }}::main -->
{% endblock main %}
