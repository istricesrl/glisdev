{# IMPORTAZIONE LIBRERIE #}
{% import '_lib/_default.twig' as cms %}
{% import '_lib/_form.twig' as frm %}
{% import 'lib/default.twig' as def %}
{% import 'lib/account.form.sub.twig' as sub %}

{# ESTENSIONE DELLO SCHEMA DI BASE #}
{% extends 'ext/main.twig' %}

{# BLOCCO PRINCIPALE DELLA PAGINA #}
{% block main %}
<!-- blocco {{ _self }}::main -->

{# MODULO PRINCIPALE #}
<section class="row flex-fill">
    <div class="col-md-12 d-flex flex-column">

        {# APERTURA DEL FORM #}
        {{ frm.openForm({ 'form': form, 'page': page, 'session': session, 'request': request }) }}

			{# SEZIONE GENERALE #}
			<fieldset>
				<legend>dati generali <small>{{ legend }}</small></legend>

				<div class="form-group row">
                    <div class="col col-md form-col">
                        <span class="label-top">anagrafica</span>
                        {{ frm.select({ 'field': { 'name': 'id_anagrafica', 'disabled': disabled }, 'source': { 'api': 'anagrafica' }, 'request': request, 'form': form, 'page': page, 'pages': pages }) }}
                    </div>
					<div class="col-12 col-md form-col">
						<span class="label-top">e-mail per recupero password</span>
						{{ frm.select({ 'field': { 'name': 'id_mail' }, 'source': { 'values': etc.select.mail }, 'request': request, 'form': form, 'page': page, 'pages': pages }) }}
					</div>
				</div>

				<div class="form-group row">
					<div class="col-12 col-md-5 form-col">
						<span class="label-top">username</span>
                        {{ frm.input({ 'field': { 'name': 'username', 'type': 'text', 'required': 1 }, 'request': request, 'form': form, 'page': page }) }}
					</div>
					<div class="col form-col">
						<span class="label-top">password</span>
						{{ frm.input({ 'field': { 'name': 'password', 'type': 'password', 'placeholder': 'se possibile almeno 8-12 caratteri alfanumerici' }, 'request': request, 'form': form, 'page': page }) }}
					</div>
					<div class="col-auto col-form-label form-col">
						<div class="form-check">
							{{ frm.checkbox({ 'field': { 'name': 'se_attivo', 'label': 'attivo' }, 'request': request, 'form': form, 'page': page }) }}
						</div>
					</div>
				</div>

			</fieldset>

			{# SUBFORM GRUPPI #}
			{{ sub.gruppi( form.table, 'account_gruppi', 'gruppi', site, page, pages, ietf, etc, request, session, 'id_account' ) }}

			{# BOTTONI E COMANDI DEL MODULO #}
			<fieldset class="form-controls mt-auto">
				{{ def.controls( page, pages, ietf, session, form.table, request ) }}
			</fieldset>

		</form>
    </div>
</section>

{% endblock main %}
