{# LIBRERIE #}
{% import '_lib/_navigation.twig' as nav %}

{# CODICE DELLA PAGINA #}
<!-- file esteso: {{ _self }} -->
<!DOCTYPE html>
<html lang="{{ localization.language.ietf }}">

    {# HEADER #}
    <head>

        {# HEADER STANDARD #}
        {% include '_inc/_page.head.twig' %}

    </head>

    {# BODY #}
    <body>

        {# CODICE DI APERTURA STANDARD DELLA PAGINA#}
        {% include '_inc/_page.open.twig' %}

        {# HEADER DI PAGINA #}
        <header class="fixed-top">

            {# HEADER DI PAGINA DI DEFAULT #}
            {% block header %}{% include 'inc/header.twig' %}{% endblock header %}

        </header>

        {# CONTENUTO PRINCIPALE DELLA PAGINA #}
        <div class="container-fluid">
            <div class="row">

                {# COLONNA SINISTRA - NAVBAR #}
                <div class="col-md-2 d-none sidebar d-md-flex d-print-none sticky h-100">

                    {# NAVBAR DI PAGINA DI DEFAULT #}
                    {% block nav %}{% include 'inc/navbar.twig' %}{% endblock nav %}

                </div>

                {# COLONNA DESTRA - CONTENUTO PRINCIPALE #}
                <main class="col col-md-10 d-flex flex-column">

                    {# TABS DI PAGINA #}
                    {{ nav.tabs( page, pages, localization.language.ietf, etc, form, request ) }}

                    {# CONTENUTO PRINCIPALE DI PAGINA #}
                    {% block main %}{% endblock main %}

                </main>

                {# TODO DOCUMENTARE #}
                {% block info %}{% include 'inc/widget.info.twig' %}{% endblock info %}
                {% block jobs %}{% include 'inc/widget.jobs.twig' %}{% endblock jobs %}
                {% block cart %}{% include 'inc/widget.cart.twig' %}{% endblock cart %}
                {% block alert %}{% include 'inc/widget.alert.twig' %}{% endblock alert %}
                {% block bookmarks %}{% include 'inc/widget.bookmarks.twig' %}{% endblock bookmarks %}

            </div>

        </div>

        {# CODICE DI CHIUSURA STANDARD DELLA PAGINA #}
        {% include '_inc/_page.close.twig' %}

        {# SCRIPT JAVASCRIPT DELLA PAGINA #}
        {% block javascript %}{% endblock javascript %}

    </body>
</html>
<!-- fine file esteso: {{ _self }} -->
